#include "xgpio.h"
#include "xparameters.h"
#include "sleep.h"
#include "platform.h"
#include "stdio.h"
#include "xuartps.h"
#include "xgpio.h"

XGpio rotary;

#define INT_MAX 2147483647
#define INT_MIN -2147483648

#define I32increment(v, a) \
    do { \
        if ((a) > 0 && (v) > INT_MAX - (a)) \
            (v) = INT_MAX; \
        else if ((a) < 0 && (v) < INT_MIN - (a)) \
            (v) = INT_MIN; \
        else \
            (v) += (a); \
    } while (0)

#define I32decrement(v, a) I32increment((v), -(a))

int main() {
    init_platform();

	XUartPs Uart_Ps;
	XUartPs_Config *Config = XUartPs_LookupConfig(XPAR_XUARTPS_0_DEVICE_ID);
	XUartPs_CfgInitialize(&Uart_Ps, Config, Config->BaseAddress);
	XUartPs_SetBaudRate(&Uart_Ps, 115200);
	xil_printf("Ready for input\r\n");

    XGpio_Initialize(&rotary, XPAR_AXI_GPIO_0_DEVICE_ID);
    XGpio_SetDataDirection(&rotary, 1, 0xFFFFFFFF);  // all inputs

    u32 PS = XGpio_DiscreteRead(&rotary, 1);
    u32 NS = 0;

    int counter = 0;

    u8 debounce=1;
    while (1) {
        u32 CS = XGpio_DiscreteRead(&rotary, 1);

        if(PS != CS)  xil_printf("CS = %u\r\n", CS);
        if(CS == 0b111){
        	switch(PS){
        		case 0b110:
        				if(debounce){
        					debounce = 0;
        				}else {
        					debounce= 1;
        					xil_printf("button\r\n");
        				}
						break;
				case 0b011:
						I32increment(I32increment,1);
						xil_printf("rechts\r\n");
					   break;
				case 0b101:
						xil_printf("links\r\n");
					   break;
				default:
					   break;
        	}

        }
        PS = CS;
        usleep(1000);
    }

    return 0;
}
//idle = 7 -> 0b111
//rotary btn = 6 -> 0b110
//A =
//B =
// 3&& 7 -> rechts 5 && 7 -> links
