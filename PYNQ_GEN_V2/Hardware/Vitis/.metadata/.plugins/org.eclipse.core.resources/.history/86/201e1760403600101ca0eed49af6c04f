namespace MIDI {
	inline float ToFreq(int note) {
		return 440.0f * powf(2.0f, (note - 69) / 12.0f);
	}
}

void PlayStartupTune() {
    int melody[] = {72, 74, 76, 77, 79}; // C-D-E-F-G
    int duration_ms = 200;

    for (int note : melody) {
        voices.emplace_back(std::make_unique<voice>(currentInstrument->createVoice(note, 100)));
        usleep(duration_ms * 1000);
        voices.back()->stop();
        voices.clear();
    }
}
