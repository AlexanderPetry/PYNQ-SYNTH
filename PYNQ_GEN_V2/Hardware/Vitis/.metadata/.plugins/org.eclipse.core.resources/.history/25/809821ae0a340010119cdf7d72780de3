#pragma once

#include "xuartps.h"
#include "xgpio.h"
#include "stdio.h"
#include "platform.h"
#include "xgpio.h"
#include "xparameters.h"
#include "sleep.h"

#define INT_MAX 2147483647
#define INT_MIN -2147483648

#define I32increment(v, a) \
    do { \
        if ((a) > 0 && (v) > INT_MAX - (a)) \
            (v) = INT_MAX; \
        else if ((a) < 0 && (v) < INT_MIN - (a)) \
            (v) = INT_MIN; \
        else \
            (v) += (a); \
    } while (0)

#define I32decrement(v, a) I32increment((v), -(a))

XGpio rotary;
XUartPs Uart_Ps;

void PS_init();
void UART_init();

